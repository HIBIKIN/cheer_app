<!DOCTYPE html>
<html>
  <head>
    <title>Cheer App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>

  <body>
    <%= render "shared/header" %>

    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <%= render "shared/flash" %>
        </div>
      </div>
      <% if user_signed_in? %>
        <div class="row">
          <div class="col-md-8">
            <div class="row">
              <%= yield %>
            </div>
          </div>
          <!-- <div class="col-md-1 bg-dark ml-2"></div> -->
          <div class="col-md-4 border-left" width=100% >
            <div class="row pl-3">
              <%= render 'shared/profile' %>
            </div>
          </div>
        </div>
      <% else %>
        <div class="row">
          <%= yield %>
        </div>
      <% end %>
    </div>
  </body>
</html>
