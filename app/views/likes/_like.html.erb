<% if user_signed_in? %>


  <% unless post.likes_count == 0 %>
    <%= link_to post_likes_path(post.id), method: :post, remote: true, class: "btn" do %>
    <div class="vertical_like">
      <i class="material-icons red-text">favorite</i>
      <span class="red-text">
        <%= "#{post.likes_count}いいね" %>
      </span>
    </div>
    <% end %>
  <% else %>
    <%= link_to post_likes_path(post.id), method: :post, remote: true, class: "btn" do %>
    <div class="vertical_like">
      <i class="material-icons grey-text text-darken-2">favorite_border</i>
      <span class="grey-text text-darken-2">
        <%= "#{post.likes_count}いいね" %>
      </span>
    </div>
    <% end %>
  <% end %>

<% else %>

  <% unless post.likes_count == 0 %>
    <div class="vertical_like">
      <i class="material-icons red-text">favorite</i>
      <span class="red-text">
        <%= "#{post.likes_count}いいね" %>
      </span>
    </div>
  <% else %>
    <div class="vertical_like">
      <i class="material-icons grey-text text-darken-2">favorite_border</i>
      <span class="grey-text text-darken-2">
        <%= "#{post.likes_count}いいね" %>
      </span>
    </div>
  <% end %>

<% end %>